<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/crear_evento"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivan.apptivate.Fragments.FragmentCrearEvento">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#798e8b90"
            android:orientation="vertical"
            android:padding="30dp" >


            <EditText
                android:id="@+id/nombreEvento"
                android:hint="Nombre del evento"
                android:inputType="text"
                android:textColorHint="#798e8b90"
                android:background="#ffffff"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:padding="8dp" />



            <EditText
                android:id="@+id/lugarEvento"
                android:hint="Lugar del evento"
                android:inputType="text"
                android:textColorHint="#798e8b90"
                android:background="#ffffff"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:padding="8dp" />



            <EditText
                android:id="@+id/descripcionEvento"
                android:hint="Breve Descripcion"
                android:inputType="text"
                android:textColorHint="#798e8b90"
                android:background="#ffffff"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:padding="8dp" />



            <EditText
                android:id="@+id/precioEvento"
                android:hint="Precio por Persona"
                android:inputType="numberDecimal"
                android:textColorHint="#798e8b90"
                android:background="#ffffff"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:padding="8dp" />



            <EditText
                android:id="@+id/plazasEvento"
                android:hint="Numero de plazas"
                android:inputType="number"
                android:textColorHint="#798e8b90"
                android:background="#ffffff"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:padding="8dp" />



            <Button
                android:id="@+id/crear"
                android:text="Crear Evento"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#00A79D"
                android:layout_marginTop="30dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>




